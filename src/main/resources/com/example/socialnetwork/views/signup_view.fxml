<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetwork.controller.SignUpController">
    <children>
        <VBox alignment="CENTER" layoutX="28.0" layoutY="48.0" prefHeight="340.0" prefWidth="529.0" spacing="10.0">
         <HBox alignment="CENTER" spacing="10.0">
            <children>
               <Label styleClass="label-style" text="Email:" />
               <TextField fx:id="txtEmail" prefHeight="26.0" prefWidth="183.0" />
            </children>
         </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label styleClass="label-style" text="First Name:" />
                <TextField fx:id="txtFirstName" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label styleClass="label-style" text="Last Name:" />
                <TextField fx:id="txtLastName" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label styleClass="label-style" text="Username:" />
                <TextField fx:id="txtUsername" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label styleClass="label-style" text="Password:" />
                <PasswordField fx:id="txtPassword" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label styleClass="label-style" text="Confirm Password:" />
                <PasswordField fx:id="txtConfirmPassword" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="607.0" spacing="10.0">
                <Button fx:id="btnsignup" onAction="#handleSignUp" style="-fx-text-fill: black;" text="Register" />
                <Button fx:id="btncancel" onAction="#handleCancel" style="-fx-text-fill: black;" text="Cancel"  />
            </HBox>
        </VBox>
         <Label layoutX="178.0" layoutY="26.0" styleClass="label-style" text="Create an account">
         <font>
            <Font name="System Bold" size="29.0" />
         </font></Label>
    </children>

</AnchorPane>
